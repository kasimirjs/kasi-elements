{

  "compilerOptions": {
    "outDir": "./dist/",
    "incremental": true,
    "declaration": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./test",
    "./dist"
  ]
}
